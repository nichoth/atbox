{
  "type": "module",
  "private": "true",
  "version": "0.0.0",
  "main": "public/index.js",
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js}\"",
    "build-tests": "esbuild test/index.ts --bundle --format=cjs --keep-names > test/test-bundle.js",
    "test": "esbuild ./test/index.ts --bundle | tapout -t 8000 | tap-spec",
    "build": "mkdir -p ./public && rm -rf ./public/* && node ./build-metadata.js && vite build",
    "start": "node ./build-metadata.js && concurrently --kill-others \"npx ntl functions:serve --port=9999 --debug\" \"npx vite\"",
    "toc": "markdown-toc --maxdepth 3 -i README.md",
    "preversion": "npm run lint",
    "version": "npm run toc && auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md README.md",
    "postversion": "git push --follow-tags",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@atproto/api": "^0.18.0",
    "@atproto/oauth-client-browser": "^0.3.34",
    "@nichoth/components": "^0.16.16",
    "@preact/signals": "^2.4.0",
    "@substrate-system/a11y": "^0.0.15",
    "@substrate-system/css-normalize": "^0.0.13",
    "@substrate-system/routes": "^5.0.2",
    "htm": "^3.1.1",
    "ky": "^1.7.5",
    "preact": "^10.26.4",
    "route-event": "^7.1.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@netlify/functions": "^5.0.1",
    "@playwright/test": "^1.56.1",
    "@preact/preset-vite": "^2.9.4",
    "@substrate-system/debug": "^0.9.30",
    "@substrate-system/tapout": "^0.0.28",
    "@substrate-system/tapzero": "^0.10.15",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "auto-changelog": "^2.4.0",
    "concurrently": "^9.0.1",
    "cssnano": "^7.0.6",
    "dotenv": "^17.2.3",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "markdown-toc": "^1.2.0",
    "netlify-cli": "^23.4.3",
    "postcss-nesting": "^13.0.1",
    "stylelint": "^16.13.0",
    "stylelint-config-standard": "^39.0.0",
    "tap-spec": "^5.0.0",
    "typescript": "^5.8.2",
    "vite": "^7.0.0"
  },
  "author": "nichoth <nichoth@nichoth.com> (https://nichoth.com)"
}
